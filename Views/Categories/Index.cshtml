@model IEnumerable<kurs_project.Models.Category>

<div class="container mt-4">
    <h1 class="mb-4">Categories</h1>

    <a asp-action="Create" class="btn btn-primary">Create New Category</a>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th style="width: 250px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-info btn-sm me-1">Details</a>
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
