@model kurs_project.Models.Grade

@{
    ViewBag.Title = "Delete Grade";
}

<div class="container mt-4">
    <h2>Delete Grade</h2>
    <h4>Are you sure you want to delete this grade?</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Student</dt>
        <dd class="col-sm-10">@Model.Student?.Name</dd>

        <dt class="col-sm-2">Course</dt>
        <dd class="col-sm-10">@Model.Course?.Title</dd>

        <dt class="col-sm-2">Grade</dt>
        <dd class="col-sm-10">@Model.Score</dd>

        <dt class="col-sm-2">Comment</dt>
        <dd class="col-sm-10">@(!string.IsNullOrEmpty(Model.Comment) ? Model.Comment : "No comment")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-start gap-2">
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>
