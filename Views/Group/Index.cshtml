@model IEnumerable<kurs_project.Models.Group>

@{
    ViewData["Title"] = "Groups";
}

<h1>Groups</h1>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Group</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Number of Students</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model)
        {
            <tr>
                <td>@group.Name</td>
                <td>@group.Students.Count</td>
                <td>
                    <a asp-action="Details" asp-route-id="@group.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@group.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@group.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>