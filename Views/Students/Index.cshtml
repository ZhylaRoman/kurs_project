@model IEnumerable<kurs_project.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<div class="container mt-4">
    <h1 class="mb-4">Students</h1>

    <a asp-action="Create" class="btn btn-primary mb-3">Add New Student</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Group</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Name</td>
                    <td>@student.Email</td>
                    <td>@student.Group?.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-sm btn-info">Details</a>
                        <form asp-action="Delete" asp-route-id="@student.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
